<li>
  <span class='byline'>

    <div class="img_wrapper">
      <img src="{{ profile_image_url }}" width="30" height="30" title="{{ name }}">
    </div>
    <div class="user_info">  
      <div class="user_name">
        {{ name }}
      </div>
      <div class="twitter_handle">
        <a href="http://twitter.com/{{ twitter_login }}" target="_blank" class="login">@{{ twitter_login }}</a>
      </div>
    </div>
  </span>

  <div class='message'>
    {{{ chat_input }}}
  </div>
  <div class='timestamp'>
    {{ time_ago }} ago 
    {{#location }}
    from {{location}} 
    {{/location}}
    
  </div>
</li>
